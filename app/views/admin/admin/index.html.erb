<div class="page-header">
  <h2>Management Console</h2>
</div>
<div class="row">
  <div class="container">
    <ul class="nav nav-tabs" style="margin-bottom:15px;">
      <li class="active"><a href="#orders" data-toggle="tab">Orders</a></li>
      <li><a href="#items" data-toggle="tab">Store Items</a></li>
      <li><a href="#donations" data-toggle="tab">Donations</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade active in" id="orders">
        <table class="table table-striped table-hover">
          <thead>
            <th>Ordered by</th>
            <th>Order date</th>
            <th>Status</th>
            <th>Summary</th>
            <th></th>
          </thead>
          <tbody>
          <%= render :partial => 'orders/order', collection: @orders if @orders.any? %>
        </tbody>
        </table>
          <center><%= will_paginate @orders, renderer: BootstrapPagination::Rails %></center>
      </div>
      <div class="tab-pane fade" id="items">
        <div class="text-right">
        <%= link_to new_admin_item_path, class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-plus"></i> Add new item
        <% end %>
      </div>
        <table class="table table-striped table-hover">
          <thead>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Status</th>
            <th></th>
          </thead>
          <tbody>
          <%= render :partial => 'admin/store_items/store_item', collection: @items if @items.any? %>
        </tbody>
        </table>
        <center><%= will_paginate @items, renderer: BootstrapPagination::Rails%></center>
      </div>
      <div class="tab-pane fade" id="donations">
        <table class="table table-striped table-hover">
          <thead>
            <th>Donated by</th>
            <th>Amount</th>
            <th>Donated</th>
            <th></th>
          </thead>
          <tbody>
          <%= render :partial => 'donations/donation', collection: @donations if @donations.any? %>
        </tbody>
        </table>
        <center><%= will_paginate @donations, renderer: BootstrapPagination::Rails%></center>
      </div>
    </div>
  </div>
</div>
