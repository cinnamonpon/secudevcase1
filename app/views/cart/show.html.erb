<div class="bs-component" style="width:60%; margin: auto;">
<div class="page-header">
  <h2>Your Cart</h2>
</div>

<div class="jumbotron">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
  </tr>
  </thead>
  <tbody>
    <% if @cart_items.empty? %>
      <tr>
        <td colspan="4"><center>Your cart is empty. <%= link_to "Shop now", items_path %> or <%= link_to "view your submmitted orders", orders_path %>.</center></td>
      </tr>
    <% end %>
    <% @cart_items.each do |c| %>
      <tr class="<%= cycle('info', '')%>">
        <td><%= c.item.name %></td>
        <td>
          <%= c.quantity %>
        </td>
        <td>$<%= c.item.price %></td>
        <td>$<%= c.price %></td>
      </tr>
    <% end %>
    <tr class="<%= cycle('info', '')%>">
      <td colspan="3"></td>
      <th><%= @cart.total %></th>
    </tr>
    </table>
    <%= link_to check_out_path, class: "btn btn-primary", style:"text-align:right;float:right;margin-top:-5px;margin-left:10px;" do %>
    <i class="glyphicon glyphicon-shopping-cart"></i> Check out
    <% end %>
    <%= link_to edit_cart_path, class: "btn btn-primary", style:"text-align:right;float:right;margin-top:-5px;" do %>
    <i class="glyphicon glyphicon-pencil"></i> Edit
    <% end %>
</div>
</div>
