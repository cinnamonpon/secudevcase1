Your cart: <br>

<table style="width:50%;">
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Total</th>
  </tr>
  <% if @cart_items.empty? %>
    <tr>
      <td colspan="4"><center>Your cart is empty. <%= link_to "Shop now", items_path %> or <%= link_to "view your submmitted orders" %>.</center></td>
    </tr>
  <% end %>
  <% @cart_items.each do |c| %>
    <tr>
      <td><%= c.item.name %></td>
      <td><%= c.quantity %></td>
      <td>$<%= c.price %></td>
      <td>$<%= c.quantity * c.price %>
    </tr>
  <% end %>
  <tr>
    <td colspan="3"></td>
    <th><%= @cart.total %></th>
  </tr>
</table>
<%= link_to "Check out", check_out_path %>
