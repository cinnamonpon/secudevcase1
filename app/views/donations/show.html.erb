<div class="bs-component" style="width:60%; margin: auto;">
<div class="page-header">
  <h2>Donation Invoice</h2>
</div>

<div class="jumbotron">
<table class="table table-striped table-hover">
  <tbody>
  <tr class="<%= cycle('', 'info') %>">
    <th>Amount</th>
    <th>$<%= @donation.amount %> </th>
  </tr>

  <tr class="<%= cycle('', 'info') %>">
    <th>Donated by</th>
    <td><%= link_to @donation.user.full_name, @donation.user %></td>
  </tr>
  <tr class="<%= cycle('', 'info') %>">
    <th>Donated</th>
    <td><%= @donation.paid_at.strftime("%B %d, %Y") %></td>
  </tr>
  <tr class="<%= cycle('', 'info') %>">
    <th>Paypal Transaction Identifier</th>
    <td><%= @donation.transaction_id %>
  </tr>
  <% if @donation.order_ref %>
    <tr class="<%= cycle('', 'info') %>">
      <td>Donated via Shop</td>
      <td><%= link_to "View Order Invoice", order_path(@donation.order_ref) %>
    </td>
  <% end %>
</tbody>
</table>
</div>
</div>
