<div class="panel panel-info">
  <div class="panel-heading" style="height:40px;">
    <h2 class="panel-title" style="text-align:left;float:left;"><%= link_to "Your cart" cart_index_path</h2>
    <p class="panel-title" style="text-align:right;float:right;">
      <%= link_to cart_edit_path, style:"text-align:right;float:right;margin-top:-2px;" do %>
      <i class="glyphicon glyphicon-pencil"></i> Edit
      <% end %>
    </p>
  </div>
  <div class="panel-body" style="max-height: 180px; overflow-y:auto;">
    <table class="table table-striped table-hover col-lg-12">
      <thead>
        <th>Item x Quantity</th>
        <th>Amount</th>
      </thead>
      <tbody>
        <% if @cart_items.any? %>
          <%= render :partial => 'cart/cart_item', collection: @cart_items %>
        <% else %>
          <tr><td colspan="2" class="text-center">There are no items in your cart.</td></tr>
        <% end %>
      <tr class="info">
        <th>Total</th>
        <th>$<%= current_user.cart.total %></th>
      <tr>
      </tbody>
    </table>
  </div>
  <div class="panel-heading">
    <%= link_to cart_clear_path(current_user.cart), class: "btn btn-xs btn-primary", style:"text-align:right;float:right;margin-top:-2px;margin-left:5px;" do %>
    <i class="glyphicon glyphicon-erase"></i> Clear
    <% end %>
    <%= link_to check_out_path, class: "btn btn-xs btn-primary", style:"text-align:right;float:right;margin-top:-2px;" do %>
    <i class="glyphicon glyphicon-shopping-cart"></i> Check out
    <% end %><br>
  </div>
</div>
