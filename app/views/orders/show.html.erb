<div class="bs-component" style="width:60%; margin: auto;">
<div class="page-header">
  <h2>Order Invoice</h2>
</div>

<div class="jumbotron">
<table class="table table-striped table-hover">
  <thead>
    <tr>
    <th>Item/s</th>
    <th>Amount</th>
  </tr>
  </thead>
  <tbody>
  <% @order.order_items.each do |o| %>
    <tr class="<%= cycle('info', '') %>">
      <td>
        <strong><%= o.store_item.name %></strong><br>
        <span style="padding:20px">Item id: <%= o.store_item.id %></span><br>
        <span style="padding:20px">Item quantity: <%= o.quantity %></span>
      </td>
      <td><strong> $<%= o.store_item.price * o.quantity %> </strong> </td>
    </tr>
  <% end %>
  <tr class="<%= cycle('info', '') %>">
    <th>Item total</th>
    <th>$<%= @order.amount %> </th>
  </tr>

  <tr class="<%= cycle('info', '') %>">
    <th>Buyer</th>
    <td><%= @order.user.full_name %></td>
  </tr>
  <tr class="<%= cycle('info', '') %>">
    <th>Payment status</th>
      <td><%= @order.status %><br>
    <% if @order.status != "Completed" %>
    <%= form_tag @order.paypal_url(order_path(@order)) %>
      <%= hidden_field_tag 'amount', '5' %>
      <%= image_submit_tag("pay_now.gif") %>
    </form>
    <% end %>
  </tr>
  <tr class="<%= cycle('info', '') %>">
    <th>Payment date</th>
    <td><%= @order.purchased_at.strftime("%B %d, %Y") %></td>
  </tr>
  <tr class="<%= cycle('info', '') %>">
    <th>Paypal Transaction Identifier</th>
    <td><%= @order.transaction_id %>
  </tr>
</tbody>
</table>
</div>
</div>
